<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip">

    <!-- ListRow Left sied Thumbnail image -->

    <TextView
        android:id="@+id/tvPareclaNroEd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/azul_letras"
        android:text="1/1" />

    <TextView
        android:id="@+id/tvSifrao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvPareclaNroEd"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@+id/tvPareclaNroEd"
        android:textColor="@color/azul_letras"
        android:text="R$: " />

    <TextView
        android:id="@+id/tvValorParcela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvSifrao"
        android:layout_alignBottom="@+id/tvSifrao"
        android:layout_toRightOf="@+id/tvSifrao"
        android:textColor="@color/gray_font"
        android:text="25,10" />

    <TextView
        android:id="@+id/tvDtVencimentoEd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvValorParcela"
        android:layout_alignBottom="@+id/tvValorParcela"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:textColor="@color/gray_font"
        android:text="21/05/2013" />

    <TextView
        android:id="@+id/tvDtVencimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvDtVencimentoEd"
        android:layout_alignBottom="@+id/tvDtVencimentoEd"
        android:layout_toLeftOf="@+id/tvDtVencimentoEd"        
        android:textColor="@color/azul_letras"
        android:text="Vcto: " />

</RelativeLayout>