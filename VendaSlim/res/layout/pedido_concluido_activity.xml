<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_sky"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PedidoConcluidoView" >

    <TextView
        android:id="@+id/tvPedidoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:text="52"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:text="Ladair Carlos Smiderle Junior"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Total"
        android:textColor="@color/white"
        android:textSize="@dimen/abc_action_bar_default_height" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCliente"
        android:layout_alignParentTop="true"
        android:paddingTop="20dp"
        android:text="Pedido:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCliente"
        android:layout_toLeftOf="@+id/tvPedidoId"
        android:text="Tabela:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvTabela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/tvPedidoId"
        android:text="Tabela A Vista"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"        
        android:text="Parcelamento:"
        android:textColor="@color/white" />

    

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/btnMenu"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView4"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tvTotalPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="R$ 58,37"
            android:textSize="@dimen/abc_dropdownitem_icon_width" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_login"
        android:text="Menu"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvParcelamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/textView8"
        android:text="30x60x90"
        android:textColor="@color/white"  />

    <Button
        android:id="@+id/btnPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnMenu"
        android:layout_alignRight="@+id/btnMenu"
        android:layout_below="@+id/btnMenu"
        android:layout_marginTop="21dp"
        android:background="@drawable/button_login"
        android:text="Novo Pedido"
        android:textColor="@color/white" />

</RelativeLayout>