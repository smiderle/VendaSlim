<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" >

            <TextView
                android:id="@+id/tvTabPreco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/labelsForms"
                android:text="Tabela de Preço Padrão: " />

            <org.holoeverywhere.widget.Spinner
                android:id="@+id/spTabPreco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvFormaParcel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/labelsForms"
                android:text="Forma de Parcelamento Padrão:" />

            <org.holoeverywhere.widget.Spinner
                android:id="@+id/spFormaParcel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvFormaPgto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/labelsForms"
                android:text="Forma de Pagamento Padrão: " />

            <org.holoeverywhere.widget.Spinner
                android:id="@+id/spFormaPgto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/spinerFormaPgto" />

            <TextView
                android:id="@+id/tcLimiteCredito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/labelsForms"                
                android:text="Limite de Crédito: " />

            <EditText
                android:id="@+id/edLimiteCredito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" >
            </EditText>
        </LinearLayout>
    </ScrollView>

</LinearLayout>